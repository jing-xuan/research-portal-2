<link href="https://fonts.googleapis.com/css?family=Open+Sans|Noto+Sans|Raleway|Lato" rel="stylesheet">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
      <script
        src="https://code.jquery.com/jquery-3.3.1.js"
        integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
        crossorigin="anonymous"></script>
<style>
  body{
    margin: 0;
  }
  .top{
    z-index: 0;
    height: 50px;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: rgb(0, 156, 157);
    box-shadow: 0px 3px 3px #888888;
  }
  .top a:hover{
    color: white;
  }
  .top a{
    text-decoration: none;
    display: block;
    font-family: 'Noto Sans';
    float: right;
    font-size: 1em;
    color: hsl(180, 20%, 90%);
    padding: 15px 15px;
  }
  #logo{
    float: left;
    padding-top: 10px;
    font-size: 1.5em;
  }
  .top .icon {
    display: none;
  }
  @media screen and (max-width: 800px) {
    .top a:not(:first-child) {display: none;}
    .top a.icon {
      display: block;
      position: absolute;
      right: 15px;
      top: 0px;
      }
      #logo{
        display: inline;
      }
  }
  @media screen and (max-width: 800px) {
    .top.responsive {
      z-index: 1;
      position: fixed;
    }
    .top.responsive a.icon {
      position: absolute;
      right: 15px;
      top: 0px;
    }
    .top.responsive a {
      background-color: rgb(0, 156, 157);
      float: none;
      display: block;
      text-align: left;
    }
    #logo{
      padding-top: 10px;
      display: block;
      float: none;
    }
  }
</style>
<div class = "top" id = "topNav">
  <a href = "/home" id = "logo">Research Portal</a>
  <a href = "/logout">Logout</a>
  <a href = "/project">View Other Projects</a>
  <a href = "#">Project Allocation</a>
  <a href = "#">Your Projects</a>
  <a href="javascript:void(0);" class="icon" onclick="resNavBar()">&#9776;</a>
</div>
<script>
  function resNavBar() {
    var x = document.getElementById("topNav");
    if (x.className === "top") {
        x.className += " responsive";
    } else {
        x.className = "top";
    }
  }
</script>
